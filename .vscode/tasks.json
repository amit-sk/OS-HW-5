{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-O3",
                "-D_POSIX_C_SOURCE=200809",
                "-Wall",
                "-std=c11",
                "shell.c",
                "myshell.c",
                "-o",
                "${fileDirname}/shell"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "build-debug",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-O0",
                "-D_POSIX_C_SOURCE=200809",
                "-Wall",
                "-std=c11",
                "queue.c",
                "test_fairness.c",
                "-o",
                "${fileDirname}/test_fairness",
                "-pthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}